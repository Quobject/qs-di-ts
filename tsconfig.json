{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noLib": false,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "outDir": "dist/"
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "files": [
    "src/index.ts",
    "src/index.spec.ts"
  ],
  "compileOnSave": false
}

